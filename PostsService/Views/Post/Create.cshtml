@model PostRequest
<div class="container">
    <form asp-action="Created" method="post">
         <div class="form-group mb-3">
             <label asp-for="Name" class="control-label"></label>
             <input asp-for="Name" class="form-control"/>
             <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group mb-3">
             <label asp-for="imagesList" class="control-label"></label>
             <input asp-for="imagesList" class="form-control" type="file" multiple/>
             <span asp-validation-for="imagesList"></span>
        </div>
        <div class="form-group mb-3">
             <label asp-for="detail" class="control-label"></label>
             <textarea asp-for="detail" class="form-control" rows="5"></textarea>
             <span asp-validation-for="detail"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Post</button>
            <a asp-action="Index" class="btn btn-danger">Cancle</a>
        </div>
    </form>
</div>